#!/usr/bin/env bash

source "`dirname $0`/../../.env"

# this docker script is different because the node container only runs as we need it
docker run -it --rm -e "TERM=xterm-256color" -v $(pwd):/usr/src/app -w /usr/src/app -p 30098:30098 --name "$COMPOSE_PROJECT_NAME"-node "$COMPOSE_PROJECT_NAME"-node npm "$@"
